        {
          "expr": "sum by (pod) (conntrack_allowance_exceeded{namespace=\"$namespace\", pod=~\"$pod\"})",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "title": "Conntrack Exceeded Drops",
      "type": "stat"
