        {
          "expr": "sum by (pod) (rate(ingress_bytes{namespace=\"$namespace\", pod=~\"$pod\"}[2m]))",
          "legendFormat": "Inbound: {{pod}}",
          "refId": "A"
        },
        {
          "expr": "sum by (pod) (rate(egress_bytes{namespace=\"$namespace\", pod=~\"$pod\"}[2m]))",
          "legendFormat": "Outbound: {{pod}}",
          "refId": "B"
        }
      ],
      "title": "Network Traffic (Bytes/Sec)",
      "type": "timeseries"
    },
