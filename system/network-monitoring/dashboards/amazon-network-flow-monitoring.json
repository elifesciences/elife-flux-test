      "title": "AWS EC2 Instance Limits (Zero is Good)",
      "type": "row"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "description": "Packets dropped because the instance exceeded its bandwidth limit.",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          },
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 1 },
      "id": 1,
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      },
      "pluginVersion": "10.0.0",
      "targets": [
        {
          "expr": "sum by (pod) (bw_in_allowance_exceeded{namespace=\"$namespace\", pod=~\"$pod\"}) + sum by (pod) (bw_out_allowance_exceeded{namespace=\"$namespace\", pod=~\"$pod\"})",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "title": "Bandwidth Exceeded Drops",
      "type": "stat"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "description": "Packets dropped because the instance exceeded its PPS limit.",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
