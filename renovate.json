{
  "extends": [
    "config:recommended",
    ":prHourlyLimitNone"
  ],
  "timezone": "Europe/London",
  "kubernetes": {
    "fileMatch": [
      "^system/monitoring/kube-web-view/deployment\\.yaml$",
      "kustomizations/.+\\.yaml$"
    ]
  },
  "assigneesFromCodeOwners": true,
  "flux": {
    "fileMatch": [
      "deployments/.+\\.yaml$",
      "system/.+\\.yaml$",
      "clusters/.+\\.yaml$",
      "kustomizations/.+\\.yaml$",
      "policies/.+\\.yaml$",
      "nodes/.+\\.yaml$",
      "teams/.+\\.yaml$",
      "crds/.+\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "assignAutomerge": true,
      "automergeSchedule": [
        "after 7am and before 8am every weekday"
      ]
    },
    {
      "matchDepNames": [
        "fluxcd/flux2"
      ],
      "automerge": false
    },
    {
      "matchDepNames": [
        "podinfo"
      ],
      "enabled": false
    },
    {
      "matchFileNames": [
        "mise.toml"
      ],
      "matchDepNames": [
        "kubectl"
      ],
      "enabled": false
    }
  ]
}
